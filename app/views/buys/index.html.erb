<div class="layout">
  <%= render 'shared/header' %>
  <div class="wrap">
    <!-- <p id="notice"><%= notice %></p> -->

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <h1>Buys</h1>

    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @buys.each do |buy| %>
          <tr>
            <td><%= link_to (image_tag buy.buyimage.url(:small)), buy %></td>
            <td><%= buy.buy_title %></td>
            <td><p><%= buy.user.name %></p></td>
            <td><%= buy.buy_description %></td>
            <td><%= link_to 'Show', buy %></td>
            <td><%= link_to 'Edit', edit_buy_path(buy) %></td>
            <td><%= link_to 'Destroy', buy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Buy', new_buy_path %>
  </div>
</div>
